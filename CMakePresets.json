{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 16,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "windows-vs2022",
      "displayName": "Windows Visual Studio 2022",
      "description": "Configure for Windows with Visual Studio 2022",
      "generator": "Visual Studio 17 2022",
      "architecture": "x64",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": "C:/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "ENABLE_TESTING": "ON"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "windows-vs2022-release",
      "displayName": "Windows Visual Studio 2022 Release",
      "description": "Configure for Windows with Visual Studio 2022 (Release)",
      "inherits": "windows-vs2022",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "linux-gcc",
      "displayName": "Linux GCC",
      "description": "Configure for Linux with GCC (Docker/CI)",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "ENABLE_TESTING": "ON"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-vs2022-debug",
      "displayName": "Build (Windows Debug)",
      "configurePreset": "windows-vs2022"
    },
    {
      "name": "windows-vs2022-release",
      "displayName": "Build (Windows Release)", 
      "configurePreset": "windows-vs2022-release"
    },
    {
      "name": "linux-gcc",
      "displayName": "Build (Linux)",
      "configurePreset": "linux-gcc"
    }
  ],
  "testPresets": [
    {
      "name": "windows-vs2022-tests",
      "displayName": "Run Tests (Windows)",
      "configurePreset": "windows-vs2022"
    },
    {
      "name": "linux-gcc-tests",
      "displayName": "Run Tests (Linux)",
      "configurePreset": "linux-gcc"
    }
  ]
}