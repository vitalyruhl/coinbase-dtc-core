{
  "name": "coinbase-dtc-core",
  "version": "0.1.0",
  "description": "Coinbase DTC Core - Market data integration",
  "dependencies": [
    {
      "name": "curl",
      "features": ["ssl"]
    },
    {
      "name": "nlohmann-json"
    },
    {
      "name": "jwt-cpp",
      "$comment": "For JWT token generation and verification"
    },
    {
      "name": "openssl",
      "$comment": "For cryptographic operations (ES256 signing)"
    },
    {
      "name": "zlib",
      "$comment": "For WebSocket message compression/decompression"
    },
    {
      "name": "gtest",
      "$comment": "For advanced testing (optional)"
    }
  ]
}